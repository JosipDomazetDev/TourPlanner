<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="300" prefWidth="400" spacing="10" styleClass="root" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tourplanner.ui.CreateTourController">

    <Label styleClass="heading" text="Tour Information" />


        <Label text="Tour Name" />
        <TextField fx:id="tourName" />

        <Label text="Tour Description" />
        <TextField fx:id="tourDescription" />

        <Label text="From" />
        <TextField fx:id="from" />

        <Label text="To" />
        <TextField fx:id="to" />

        <Label text="Transport Type" />
        <TextField fx:id="transportType" />

        <Label text="Tour Distance" />
        <TextField fx:id="tourDistance" />

        <Label text="Estimated Time" />
        <TextField fx:id="estimatedTime" />
   <Button mnemonicParsing="false" text="Create" onMouseClicked="#onCreateTourClick" />
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>


</VBox>
