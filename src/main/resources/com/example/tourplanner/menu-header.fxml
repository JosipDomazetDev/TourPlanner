<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.tourplanner.ui.MenuController" fx:id="menu" >
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="exportButton" mnemonicParsing="false" onAction="#onExportClick" text="Export"/>
                        <MenuItem fx:id="importButton" mnemonicParsing="false" onAction="#onImportClick" text="Import"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit"/>
                <Menu mnemonicParsing="false" text="Options"/>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
            <VBox.margin>
                <Insets bottom="16.0"/>
            </VBox.margin>
        </MenuBar>
    </children>
</VBox>
