<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.tourplanner.ui.ToursController">
    <VBox prefWidth="250.0" BorderPane.alignment="CENTER">
        <children>
            <TextField fx:id="searchTextField2" promptText="Search">
                <VBox.margin>
                    <Insets bottom="8.0"/>
                </VBox.margin>
            </TextField>
            <HBox prefWidth="200.0">
                <children>
                    <Text fill="#0e94c9" strokeType="OUTSIDE" strokeWidth="0.0" text="Tours" textAlignment="CENTER"
                          textOrigin="CENTER">
                        <font>
                            <Font name="Arial Bold" size="19.0"/>
                        </font>
                    </Text>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button mnemonicParsing="false" onMouseClicked="#onAddTour" text="+"/>
                </children>
            </HBox>
            <ListView fx:id="toursListView" onMouseClicked="#onTourClick" prefHeight="200.0" prefWidth="200.0">
                <VBox.margin>
                    <Insets top="8.0"/>
                </VBox.margin>
            </ListView>
            <HBox>
                <children>
                    <Button maxWidth="Infinity"  onMouseClicked="#printTourReport"  mnemonicParsing="false" text="Print TourReport" HBox.hgrow="ALWAYS">
                        <padding>
                            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                        </padding>
                        <HBox.margin>
                            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                        </HBox.margin>
                    </Button>
                    <Button maxWidth="Infinity" onMouseClicked="#printSummaryReport" mnemonicParsing="false" text="Print SummaryReport" HBox.hgrow="ALWAYS">
                        <padding>
                            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                        </padding>
                        <HBox.margin>
                            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                        </HBox.margin>
                    </Button>
                </children>
                <VBox.margin>
                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
                </VBox.margin>
            </HBox>
        </children>
        <padding>
            <Insets right="10.0"/>
        </padding>
    </VBox>

</AnchorPane>
