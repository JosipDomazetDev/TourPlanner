<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.tourplanner.ui.ToursController">
    <VBox prefHeight="200.0" prefWidth="250.0" BorderPane.alignment="CENTER">
        <children>
            <TextField fx:id="searchTextField2" promptText="Search">
                <VBox.margin>
                    <Insets bottom="8.0" />
                </VBox.margin>
            </TextField>
            <HBox prefWidth="200.0">
                <children>
                    <Text fill="#0e94c9" strokeType="OUTSIDE" strokeWidth="0.0" text="Tours" textAlignment="CENTER" textOrigin="CENTER">
                        <font>
                            <Font name="Arial Bold" size="19.0" />
                        </font>
                    </Text>
                    <Region HBox.hgrow="ALWAYS" />
                    <Button maxHeight="-Infinity" mnemonicParsing="false" onMouseClicked="#onAddTour" text="+" />
                </children>
            </HBox>
            <ListView fx:id="toursListView" onMouseClicked="#onTourClick" prefHeight="200.0" prefWidth="200.0">
                <VBox.margin>
                    <Insets top="8.0" />
                </VBox.margin>
            </ListView>
            <HBox prefHeight="100.0" prefWidth="200.0" />
            <Button mnemonicParsing="false" text="Button" />
            <Button mnemonicParsing="false" text="Button" />
        </children>
        <padding>
            <Insets right="10.0" />
        </padding>
    </VBox>

</AnchorPane>
